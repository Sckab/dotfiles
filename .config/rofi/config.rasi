configuration {
	modes: "window,drun,run,ssh";
	font: "Inter 14";
	show-icons: true;
	terminal: "kitty";
	sort: true;
	sorting-method: "fzf";
	sidebar-mode: false;

    timeout {
        action: "kb-cancel";
        delay:  0;
    }

    filebrowser {
        directories-first: true;
        sorting-method:    "name";
    }
}

@theme "./theme.rasi"
